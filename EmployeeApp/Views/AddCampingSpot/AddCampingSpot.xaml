<UserControl x:Class="CampingApplication.EmployeeApp.Views.AddCampingSpot.AddCampingSpot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampingApplication.EmployeeApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Name="AddSpot" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" VerticalAlignment="Top" Height="32">
        <Button Content="Toevoegen plaats" Canvas.Left="0" Canvas.Top="0" Click="Plaats_Click"/>
        <TextBlock x:Name="AddNotification" Canvas.Left="0" TextWrapping="Wrap" Text="" Canvas.Top="18" Width="96" HorizontalAlignment="Center" VerticalAlignment="Top" Background="White"/>
        <Button Content="Opslaan" Canvas.Left="715" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Opslaan_Click" Width="85"/>
        <TextBox x:Name="SpotNumber" Canvas.Left="715" TextWrapping="Wrap" Text="Plaatsnummer" Canvas.Top="18" Width="85" Height="14" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="SpotNumber_TextChanged"/>
    </Canvas>
</UserControl>
