<UserControl x:Class="CampingApplication.EmployeeApp.Views.AddCampingSpot.AddCampingSpot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampingApplication.EmployeeApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Name="AddSpot" VerticalAlignment="Top" Height="32">
        <Button x:Name="AddButton" Content="Toevoegen plaats" Canvas.Left="0" Canvas.Top="0" Click="Plaats_Click"/>
        <Button Content="Opslaan" Canvas.Left="715" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Opslaan_Click" Width="85"/>
        <Canvas x:Name="Spots" Height="450" Width="800"/>
    </Canvas>
</UserControl>
